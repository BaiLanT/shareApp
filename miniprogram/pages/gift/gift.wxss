/* miniprogram/pages/gift/gift.wxss */

page {
  background: #eee;
}

.title {
  position: fixed;
  width: 100%;
  z-index: 9999;
}

.logo {
  width: 100%;
}

.weui-input {
  width: 300rpx;
  float: right;
  text-align: right;
}

.footer {
  margin-top: 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.footer-imags {
  width: 100%;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.nickName {
  margin-left: 10rpx;
}

.avatarUrl {
  width: 100rpx;
  height: 100rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}

.stat {
  float: right;
  margin-right: 20rpx;
}

.footer-title {
  margin: 20rpx 0;
  text-align: center;
}

.scroll {
  max-height: 300rpx;
}

.userinfo {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 70%;
  display: flex;
  align-items: center;
}

.qycode {
  background: #fff;
  display: flex;
  flex-direction: column;
}
.qycode-title{
  margin-left: 10rpx;
  font-size: 42rpx;
  font-weight: bold;
  color:tomato
}
.image-one{
